<% if @movie.errors.any? %>
  <div id="error_explanation">
    There were errors, please, check them.
  </div>
<% end %>

<%= form_for @movie do |f| %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
    <%= error_tag @movie, :name %>
  </div>

  <div class="field">
    <%= f.label :rating %><br>
    <%= f.number_field :rating %>
    <%= error_tag @movie, :rating %>
  </div>

  <div class="field">
    <%= f.label :release_date %><br>
    <%= f.date_select :release_date %>
    <%= error_tag @movie, :release_date %>
  </div>

  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
    <%= error_tag @movie, :description %>
  </div>

  <div class="field">
    <%= f.label :user_id %><br>
    <%= f.number_field :user_id %>
    <%= error_tag @movie, :user_id %>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
