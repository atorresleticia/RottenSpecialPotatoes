<% provide(:title, "Movies") %>
<h1>
  Movies
</h1>


<ul class="movies">
  <% @movies.each do |movie| %>
    <li>
      <h4>
        <%= link_to movie.name, movie %>
        <font size="2" style="color:#0364AC">
          &emsp; &emsp; &emsp;
          <%= link_to ' More ', movie %>
        </font>
        <font size="2" color ="#0364AC">
          &emsp;
          <%= link_to 'Edit', edit_movie_path(movie) %>
        </font>
        <font size="2" color ="#0364AC">
          &emsp;
          <%= link_to ' Delete ', movie, method: :delete, data: { confirm: 'Are you sure?' } %>
        </font>
      </h4>
    </li>
  <% end %>
</ul>

<h2>
  <br>
    <%= link_to "Add new movie", new_movie_path %>
</h2>